---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LoadingScreen from '../components/LoadingScreen.astro';
import MarqueeBar from '../components/MarqueeBar.astro';
import ScrollTopButton from '../components/ScrollTopButton.astro';
import Lightbox from '../components/Lightbox.astro';
import '../styles/style.css';

interface Props {
  title: string;
  description: string;
  currentPage?: string;
  showLoadingScreen?: boolean;
  showMarquee?: boolean;
  showLightbox?: boolean;
}

const {
  title,
  description,
  currentPage,
  showLoadingScreen = false,
  showMarquee = false,
  showLightbox = false,
} = Astro.props;

const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ“·</text></svg>">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=VT323&family=Press+Start+2P&family=Space+Mono:wght@400;700&display=swap" media="print" onload="this.media='all'">
  <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=VT323&family=Press+Start+2P&family=Space+Mono:wght@400;700&display=swap"></noscript>
</head>
<body>

  {showLoadingScreen && <LoadingScreen />}

  <a href="#main-content" class="skip-nav">Skip to content</a>
  <div class="stars" aria-hidden="true"></div>

  {showMarquee && <MarqueeBar />}

  <Header currentPage={currentPage} />

  <main id="main-content">
    <slot />
  </main>

  <Footer />

  <ScrollTopButton />

  {showLightbox && <Lightbox />}

  <script is:inline src={`${base}scripts/main.js`}></script>
</body>
</html>
